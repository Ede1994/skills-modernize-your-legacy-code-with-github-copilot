{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Account Management System",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/accounting/index.js",
            "cwd": "${workspaceFolder}/src/accounting",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Jest Tests",
            "program": "${workspaceFolder}/src/accounting/node_modules/.bin/jest",
            "args": [
                "--runInBand",
                "--coverage"
            ],
            "cwd": "${workspaceFolder}/src/accounting",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "windows": {
                "program": "${workspaceFolder}/src/accounting/node_modules/jest/bin/jest"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test File",
            "program": "${workspaceFolder}/src/accounting/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}/src/accounting",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "windows": {
                "program": "${workspaceFolder}/src/accounting/node_modules/jest/bin/jest"
            }
        }
    ]
}
